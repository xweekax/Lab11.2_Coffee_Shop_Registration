@{
    ViewBag.Title = "Registration";
}
<h2>@ViewBag.Title.</h2>

<form action=" /home/welcome">
    <table>
        <tr>
            <td>First Name:</td>
            <td><input type="text" name="firstname"></td>
        </tr>
        <tr>
            <td>Last Name:</td>
            <td><input type="text" name="lastname"></td>
        </tr>
        <tr>
            <td>Email Address:</td>
            <td><input type="text" name="emailaddress"></td>
        </tr>
        <tr>
            <td>Phone Number:</td>
            <td><input type="text" name="phonenumber"></td>
        </tr>
        <tr>
            <td>Password:</td>
            <td><input type="password" name="password"></td>
        </tr>
    </table>
    <input type="submit" value="submit" />
</form>

<br/><br/>
     <p>Password must contain:<br /><ul><li>At Least 1 Capital Letter</li><li>At Least 1 Number</li><li>At Least 1 Special Character</li><li>At Least 8 Character Length</li></ul></p>

